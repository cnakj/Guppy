<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.BestWaterFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/yeoldae_scroll"
                    style="@style/Type"
                    android:text="열대어" />

                <Button
                    android:id="@+id/guppy_cb"
                    style="@style/BestItem"
                    android:text="구피"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/guppy_detail"
                    style="@style/BestDetail"
                    android:text="* 적정온도: 24~28도\n* 적정 Ph: 중성, 알칼리성\n* 먹이 주기: 1일 1회\n* 환수방법: 주 1회 30%"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/flatty_cb"
                    style="@style/BestItem"
                    android:text="플래티/베어리터스"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/flatty_detail"
                    style="@style/BestDetail"
                    android:text="* 적정온도: 24~28도\n* 적정 Ph: 중성, 약알칼리성\n* 먹이 주기: 1일 1회\n* 환수방법: 주 1회 30%"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/molly_cb"
                    style="@style/BestItem"
